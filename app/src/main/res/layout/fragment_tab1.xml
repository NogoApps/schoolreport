<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@color/background">


        <RelativeLayout
            android:id="@+id/list_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/semProvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/recycler_view2"
                android:layout_below="@+id/materia"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="40dp"
                android:text="@string/sem_provas"
                android:textColor="@color/txtColor"
                android:textSize="40dp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView

                android:id="@+id/precisaTirar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recycler_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="@string/precisa_recuperar"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/txtColor" />


            <ProgressBar

                android:id="@+id/progress_bar"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="22dp"
                android:visibility="gone" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/materia"
                android:layout_marginTop="13dp"
                android:scrollbars="vertical" />

            <TextView
                android:id="@+id/nota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/materia"
                android:layout_alignBottom="@+id/materia"
                android:layout_centerHorizontal="true"
                android:text="   Notas "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/txtColor" />

            <TextView
                android:id="@+id/falta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/recycler_view"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="38dp"
                android:text="Faltas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/txtColor" />

            <TextView
                android:id="@+id/materia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@+id/semProvas"
                android:text="MatÃ©rias"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/txtColor" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/precisaTirar"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@+id/semProvas"
                android:scrollbars="vertical" />


            <TextView
                android:id="@+id/align_pesquisa_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/notas_anteriores"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:text="" />

            <TextView
                android:id="@+id/notas_anteriores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notas anteriores:"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_marginTop="37dp"
                android:layout_below="@+id/recycler_view2"
                android:layout_centerHorizontal="true" />

            <Spinner
                android:id="@+id/spinner_ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/align_pesquisa_button"
                android:layout_toStartOf="@+id/falta"></Spinner>

            <Spinner
                android:id="@+id/bimestre_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/align_pesquisa_button"
                android:layout_toEndOf="@+id/materia"
                android:layout_marginStart="6dp"></Spinner>

            <Button
                android:id="@+id/pesquisar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Pesquisar"
                android:background="@color/colorPrimary"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:layout_below="@+id/bimestre_spinner"
                android:layout_centerHorizontal="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>


        </RelativeLayout>

        <View

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/list_layout" />


    </RelativeLayout>


</ScrollView>